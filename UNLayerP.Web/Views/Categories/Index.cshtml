@model IEnumerable<CategoryDto>

<h1>Kategoriler</h1><br />

<a asp-action="Create" class="btn btn-success mb-1"> Yeni Kategori Ekle </a> <br />

<table class="table table-bordered w-50 h-25 text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning mr-1">Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil </a>
                </td>
            </tr>
        }
    </tbody>
</table>